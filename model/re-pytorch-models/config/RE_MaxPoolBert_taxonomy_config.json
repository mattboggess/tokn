{
    "name": "RE_MaxPoolBert_taxonomy",
    "n_gpu": 1,

    "arch": {
        "type": "MaxPoolBert",
        "args": {
            "num_classes": 2
        }
    },
    "data_loader": {
        "type": "RelationDataLoader",
        "args":{
            "data_dir": "../../data/relation_extraction",
            "batch_size": 4,
            "shuffle": true,
            "num_workers": 0,
            "relations": ["subclass-of"],
            "embedding_type": "Bert",
            "max_sent_length": 100,
            "max_sentences": 16
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 2e-5,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "macro_f1", "micro_f1", "micro_precision", "macro_precision", 
        "micro_recall", "macro_recall"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.0
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true
    }
}
