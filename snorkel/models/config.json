{
    "name": "BertEM",
    "n_gpu": 1,

    "arch": {
        "type": "BertEM",
        "args":{}
    },
    "data_loader": {
        "type": "RelationDataLoader",
        "args":{
            "data_dir": "../data/model_data",
            "batch_size": 16,
            "label_column": "label_model_labels",
            "shuffle": true,
            "num_workers": 0,
            "balance_loss": false,
            "max_sent_length": 256
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-5,
            "eps": 1e-8,
            "correct_bias": false,
            "weight_decay": 0.00
        }
    },
    "loss": "soft_label_cross_entropy",
    "metrics": [
        "accuracy", "micro_f1", "macro_f1", "micro_recall", "macro_recall", "micro_precision", "macro_precision" 
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.0
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 3,

        "tensorboard": true
    }
}
