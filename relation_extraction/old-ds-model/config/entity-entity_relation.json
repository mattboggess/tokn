{
    "name": "entity-entity_relation",
    "n_gpu": 1,

    "arch": {
        "type": "BagAttentionBert",
        "args": {
            "num_classes": 6
        }
    },
    "data_loader": {
        "type": "RelationDataLoader",
        "args":{
            "data_dir": "../../data/relation_extraction",
            "batch_size": 8,
            "shuffle": true,
            "num_workers": 0,
            "relations": ["subclass-of", "has-part", "has-region", "possesses", "element"],
            "embedding_type": "Bert",
            "max_sent_length": 256,
            "max_sentences": 2 
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-5,
            "weight_decay": 0.01
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "macro_f1", "micro_f1", "micro_precision", "macro_precision", 
        "micro_recall", "macro_recall"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.0
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_macro_f1",
        "early_stop": 3,

        "tensorboard": true
    }
}
