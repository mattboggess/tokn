{
    "name": "RE_MaxPool_Test",
    "n_gpu": 1,

    "arch": {
        "type": "MaxPoolTest",
        "args": {
            "num_embeddings": 50000,
            "embedding_dim": 40,
            "hidden_size": 20,
            "num_classes": 3,
            "max_sent_length": 100
        }
    },
    "data_loader": {
        "type": "RelationDataLoader",
        "args":{
            "data_dir": "../data/relation_extraction",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "relations": ["has-part", "has-region"],
            "embedding_type": "custom",
            "split": "debug",
            "max_sent_length": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "macro_f1", "micro_f1", "micro_precision", "macro_precision", 
        "micro_recall", "macro_recall"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
