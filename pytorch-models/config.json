{
    "name": "Relation Extraction",
    "n_gpu": 1,

    "arch": {
        "type": "MaxPoolBaseline",
        "args": {
            "num_embeddings": 20000,
            "embedding_dim": 40,
            "hidden_size": 20
        }
    },
    "data_loader": {
        "type": "RelationDataLoader",
        "args":{
            "data_dir": "../data/relation_extraction",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "relations": ["subclass-of"],
            "embedding_type": "custom",
            "split": "debug"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 2,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
